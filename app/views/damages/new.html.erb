<div class="damages-container">


    <div class="formDamageYesNo">

      <div class="formDamageYesNo-2">
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="70"
          aria-valuemin="0" aria-valuemax="100" style="width:77.7%">
          </div>
        </div>
      </div>

      <div class="formDamageYesNo-1">
        <h13>Avez-vous des dommages <br/> sur votre voiture ?</h13>
      </div>

      <div class="formDamageYesNo-3">
        <div class="formDamageYesNo-3-1">
          <div class="btn-hover color-5" id="submit-yes-damage">Oui</div>
        </div>
        <div class="formDamageYesNo-3-2">
          <%= link_to "Non", final_validation_car_path(@car), class: "btn-hover color-11" %>
        </div>
      </div>
    </div>


  <div id="form-damage">
    <div class="choose-form-damage-nature form-damage-nature">
      <div class="choose-form-damage-nature-container">

        <div class="choose-form-damage-nature-1">
          <h5>Le dommage concerne:</h5>
        </div>

        <div class="choose-form-damage-nature-2">
          <ul class="damages-type form-margin">
            <li data-name="carrosserie" class="btn" data-target="form-carrosserie">
              <i class="fas fa-car-crash"></i>
              <h4 id="damages-type-font">Carrosserie</h4>
            </li>
            <li data-name="mecanique" class='btn' data-target="form-mecanique">
              <i class="fas fa-wrench"></i>
              <h4 id="damages-type-font">Mécanique</h4>
            </li>
          </ul>
        </div>

      </div>
    </div>


    <div class="form-damage-nature hide-or-active" id="form-carrosserie">
      <%= simple_form_for [@car, @damage] do |f| %>
        <%= f.input :nature, as: :hidden, input_html: { id: 'true-nature-carrosserie'}%>
        <div class="nature-damages">
          <div class="nature-damages-2">
            <div class="damages-nature">
              <% Damage::CARROSSERIE.each do |damage| %>


              <div class="info-card-small-damage btn" data-value="<%= damage %>" data-name="carrosserie">
                <!-- <i class="fas fa-check"></i>-->
                <div class="tick-gris">
                  <%= image_tag "tick-gris.png", alt: "tick" %>
                </div>
                <div class="tick-vert hidden">
                  <%= image_tag "tick-vert.png", alt: "tick" %>
                </div>

                <h5 class="to-be-green h5-title-damage"> <%= damage %> </h5>
              </div>

              <% end %>

            </div>
            <%= f.input :title, as: :hidden, input_html: { id: 'true-title-carrosserie'}%>
          </div>

          <div class="nature-damages-3">
            <%= f.input :description, label: "Description", as: :text %>
          </div>

          <div id="damage-camera-button" class="btn-hover color-13">Ajouter une photo</div>

        </div>

        <div class="nature-damages-4">


          <div class="nature-damages-5">
            <!-- <h13>Le dommage sur la mécanique concerne: </h13> -->
          </div>




            <div class="damage-camera-video hidden">
              <div class="">

                <div class="edit-pictures-1">
                  <h5>Veuillez documenter les dommages</h5>

                  <div class="photo-upload-features">

                    <main id="camera-damage">
                    <!-- Camera sensor -->
                      <canvas id="camera--sensor-damage"></canvas>
                      <!-- Camera view -->
                      <video id="camera--view-damage" autoplay playsinline>
                      </video>
                    </main>
                    <a id="camera--trigger-3">Prendre photo</a>
                  </div>

                </div>
              </div>
            </div>

            <div class="damage-camera-capture hidden">
              <div class="form5-1">

                <div class="edit-pictures-2">
                     <!-- Camera output -->
                  <img src="//:0" alt="" id="camera--output-damage">
                  <%= f.input :picture_1, as: :hidden, class: "photo-upload" %>
                </div>
              </div>
            </div>

        </div>

        <div class="edit-pictures-3">
          <%= f.submit "Finaliser", class: "btn-hover color-5"%>
        </div>
      <% end %>
    </div>

