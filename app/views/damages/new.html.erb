  <div class="form-damage-nature hide-or-active" id="form-mecanique">
    <%= simple_form_for [@car, @damage] do |f| %>
      <%= f.input :nature, as: :hidden, input_html: { id: 'true-nature-mecanique'}%>

      <div class="nature-damages">

        <div class="nature-damages-5">
          <!-- <h13>Le dommage sur la mécanique concerne: </h13> -->
        </div>

          <div class="nature-damages-6">
            <div class="damages-nature nature-damages-6-1">
              <% Damage::MECANIQUE.each do |damage| %>

                <div class="info-card-small-damage btn" data-value="<%= damage %>" data-name="mecanique">
                  <!-- <i class="fas fa-check"></i> -->
                  <div class="tick-gris">
                    <%= image_tag "tick-gris.png", alt: "tick" %>
                  </div>
                  <div class="tick-vert hidden">
                    <%= image_tag "tick-vert.png", alt: "tick" %>
                  </div>
                  <h5 class="to-be-green h5-title-damage"> <%= damage %> </h5>

                </div>
              <% end %>
            </div>
            <%= f.input :title, as: :hidden, input_html: { id: 'true-title-mecanique'}%>
          </div>
        </div>

        <div class="nature-damages-7">
          <%= f.input :description, as: :text %>
        </div>

        <div class="final-step-button">
          <%= f.submit "Finaliser", class: "btn-hover color-5"%>
        </div>

      </div>

    <% end %>
  </div>

