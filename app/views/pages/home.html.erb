<div class="main-container">

  <div class="row body-row" id="header-row">

    <div class="col-xs-12 home-title header__bg text-left">
      <div class="main-title " id="main-title">
        <h1>Marre de vous faire avoir?</h1>
      </div>
      <div class="comment-title" id="comment-title">
        <p>Estimez le vrai prix de votre voiture.</p>
      </div>
    </div>
  </div>

 <div class="row body-row">
    <div class="col-xs-12 first-form ">
      <%= simple_form_for @car do |f| %>
        <%= f.input :registration_number, as: :string%>
        <%= f.input :estimated_kilometers, as: :range, as: :hidden, input_html: { id: 'trueSlider'}%>
        <!-- <input type="range" value="45" data-tooltip="true" id='slider'> -->
        <input id="ex11" type="text" data-slider-handle="custom"/>
        <%= f.submit "Prix", class: "btn btn-submit" %>
      <% end %>
    </div>
  </div>

</div>
