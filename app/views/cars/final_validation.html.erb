<div class="karl-container" style='padding:10px'>

<h1>Validez votre annonce:</h1>

  <!-- les photos -->
  <div class="add-picture-wrapper">

    <div class="final-validation-caroussel">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="car-caroussel-indicators">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
        </div>

        <div class="carousel-inner" role="listbox" >
          <div class="item active">
            <img class="d-block w-100" src="<%= @car.photo_1%>" alt="First slide">
          </div>
          <div class="item">
            <img class="d-block w-100" src="<%= @car.photo_2%>" alt="Second slide">
          </div>
          <div class="item">
            <img class="d-block w-100" src="<%= @car.photo_3%>" alt="Third slide">
          </div>
        </div>

      </div>
    </div>

  </div>

  <h4>Infos véhicules</h4>
  <div class="add-info-wrapper">

    <div>
      <p><%= @car.car_brand %> <%= @car.model_type %> <%= @car.model_version %></p>
      <p><%= @car.first_registration_date %></p>
    </div>

    <div>
      <p><%= @car.fiscal_horsepower %></p>
      <p><%= @car.fuel_type %></p>
    </div>

    <div>
      <p><%= @car.gearbox %></p>
      <p><%= @car.door_number %></p>
    </div>

    <div>
      <p><%= @car.exact_kilometer %></p>
    </div>
  </div>

  <div class="add-description-wrapper">


    <p>Votre annonce:</p>
    <p>"Bonjour, je vend ma <%= @car.car_brand %> <%= @car.model_type %> sur <%= @car.location %>. Je dois m'en séparer car je <%= @car.why_selling? %>."</p>


  </div>

  <div class="add-final-price">
      <p><%= @car.estimated_price %></p>
  </div>

<p></p>
<h2>Votre voiture a elle des dommages ? (rayures, probleme d'embraillage, Courroie de distribution à changer..)</h2>
<%= link_to new_car_damage_path(@car) do %>
  <button class="btn btn_primary">Ajouter un dommage</button>
<% end %>
<p></p>
<div class="damages">
  <% @car.damages.each do |damage| %>
    <h2><%= damage.title %></h2>
    <p><%= damage.description %></p>

    <div class="second-final-validation-caroussel">
      <div id="secondCarouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="car-caroussel-indicators">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
        </div>

        <div class="carousel-inner" role="listbox" >
          <div class="item active">
            <img class="d-block w-100" src="<%= damage.picture_1%>" alt="First slide">
          </div>
          <div class="item">
            <img class="d-block w-100" src="<%= damage.picture_2%>" alt="Second slide">
          </div>
          <div class="item">
            <img class="d-block w-100" src="<%= damage.picture_3%>" alt="Third slide">
          </div>
        </div>

      </div>
    </div>

    <%= link_to edit_car_damage_path(@car, damage) do %>
      <button class="btn btn_primary">Edit</button>
    <% end %>
    <%= link_to 'Delete',
             car_damage_path(@car, damage),
                         method: :delete,
                         data: { confirm: 'Are you sure?' } %>
    <% end %>
</div>

<p></p>

<!-- le lien pour l'étape suivante-->
<%= link_to final_message_car_path(@car) do %>
  <button class="btn btn_primary">Validate</button>
<%end%>

</div>
